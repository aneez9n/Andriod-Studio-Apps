<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

<ImageView
    android:id="@+id/a1"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:src="@drawable/psl"
    />

    <TextView
        android:id="@+id/a2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peshawer Zalmi"
        android:layout_below="@+id/a1"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp">

    </TextView>

    <TextView
        android:id="@+id/a3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lahore"
        android:layout_toRightOf="@+id/a2"
        android:layout_below="@+id/a1"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp">

    </TextView>

    <TextView
        android:id="@+id/a4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="120/5"
        android:textSize="30dp"
        android:layout_below="@+id/a2"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp">

    </TextView>
    <TextView
        android:id="@+id/a5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="120/5"
        android:textSize="30dp"
        android:layout_below="@+id/a3"
        android:layout_toRightOf="@+id/a4"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="50dp">

    </TextView>







    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/a4"
        android:layout_marginLeft="50dp"
        android:text="UPDATE SCORE"
        android:textSize="10dp"
        android:onClick="updatescore1">


    </Button>

    <Button
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/b1"
        android:layout_marginLeft="50dp"
        android:text="UPDATE WICKETS"
        android:textSize="10dp"
        android:onClick="updateWickets1">

    </Button>

    <Button
        android:id="@+id/b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/b2"
        android:layout_marginLeft="50dp"
        android:text="RESET"
        android:onClick="reset"
        >

    </Button>










    <Button
        android:id="@+id/b11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/b1"
        android:layout_below="@id/a4"
        android:layout_marginLeft="70dp"
        android:text="UPDATE SCORE"
        android:textSize="10dp"
        android:onClick="updatescore2">

    </Button>

    <Button
        android:id="@+id/b22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/b2"
        android:layout_below="@id/b11"
        android:layout_marginLeft="60dp"
        android:text="UPDATE WICKETS"
        android:textSize="10dp"
        android:onClick="updateWickets2">

    </Button>

    <Button
        android:id="@+id/b33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/b2"
        android:layout_below="@id/b22"
        android:layout_marginLeft="60dp"
        android:text="RESET"
        android:onClick="reset2">

    </Button>





    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="NEW MATCH">

    </Button>


</RelativeLayout>